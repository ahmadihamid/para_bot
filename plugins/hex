hex() {

  if [[ ${MESSAGE:3} = *[!\ ]* ]]; then
    local HEXDEC="${MESSAGE:4}"
    if [[ ${HEXDEC:0:2} = '0x' ]]; then
      MSG="$(printf '%d\n' "$HEXDEC")"
    else
      MSG="$(printf '0x%x\n' "$HEXDEC")"
    fi
  else
    MSG='/hex <number>
    This function converts a number to or from hexadecimal.'
  fi

  send_message

}
