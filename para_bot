#!/bin/bash

# para_bot, the Telegram bot written in bash.
# Written by si_kabayan
# Inspired by http://github.com/topkecleon/bashbot

# Depends on JSON.sh (http://github.com/dominictarr/JSON.sh),
# which is MIT/Apache-licensed.

# variables --------------------------------------------------------------------

TOKEN=''
URL='https://api.telegram.org/bot'$TOKEN
MSG_URL=$URL'/sendMessage?chat_id='
UPD_URL=$URL'/getUpdates?offset='
OFFSET=0
TIMEOUT='timeout=20'

# functions --------------------------------------------------------------------

function send_message {
  curl --data-urlencode "action=typing" "$URL/sendChatAction?chat_id=$1&"
  res=$(curl --data-urlencode "text=$2" "$MSG_URL$1&reply_to_message_id=$3&disable_web_page_preview=1&")
}

# main -------------------------------------------------------------------------

while true; do {

	res=$(curl $UPD_URL$OFFSET$TIMEOUT)

	TARGET=$(echo $res | ./libs/JSON.sh | egrep '\["result",0,"message","chat","id"\]' | cut -f 2)
	OFFSET=$(echo $res | ./libs/JSON.sh | egrep '\["result",0,"update_id"\]' | cut -f 2)
	MESSAGE=$(echo $res | ./libs/JSON.sh -s | egrep '\["result",0,"message","text"\]' | cut -f 2 | cut -d '"' -f 2)
  MSG_ID=$(echo $res | ./libs/JSON.sh | egrep '\["result",0,"message","message_id"\]' | cut -f 2)

  MESSAGE=${MESSAGE/@para_bot/}
  COMMAND="${MESSAGE%% *}"
  
	OFFSET=$((OFFSET+1))
  
	if [ $OFFSET != 1 ]; then
		case $COMMAND in
			'/info')
        msg="This is para_bot, the Telegram bot written in bash."
      ;;
      '/calc')  
        msg="$(printf "%.2f\n" $(echo ${MESSAGE} | \
        sed 's|/calc ||;s|libs  LICENSE  para_bot  plugins  README.md|*|' | bc -l))"
      ;;
      '/ddg')
        QUERY="$(echo ${MESSAGE/\/ddg /} | sed 's|[!]|%21|g;s| |+|g')"
        msg="$(curl -s -X GET "https://api.duckduckgo.com/?q=%5C$QUERY&kp=1\
        &format=json&kp=1&no_redirect=1&no_html=1" | \
        sed -e 's|.*Redirect":"\(.*\)","DefinitionURL.*|\1|')";;
      '/echo')
        msg="${MESSAGE/\/echo /}"
      ;;
      '/help')  
        msg="Available commands:
        - /about
        - /calc <expression>
        - /ddg <query>
        - /echo <text>
        - /help [command]
        - /info
        - /jam"
      ;;
      '/jam') 
        H=$(date +%H)
        MS=$(date +%M:%S)
        msg=$(printf "%s\n" "UTC : $(date -u +%T)" "WIB : $H:$MS" \
        "WIT: $(($H+1)):$MS" "WITA: $(($H+2)):$MS")
      ;;
      '/kamus')  
        QUERY="${MESSAGE/\/kamus /}"
        msg="$(sed -n -e /^"$QUERY\t"/Ip ./libs/kbbi.txt | \
        sed -e "s|[\]n|\n|g;s|^$QUERY.*\t||I")"
      ;;
      *) echo "Not defined";;
		esac
		send_message "$TARGET" "$msg" "$MSG_ID"
	fi

} &>/dev/null; done
